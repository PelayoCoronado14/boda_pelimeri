<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.QuizResultsActivity">

    <TextView
        android:id="@+id/questionary_results_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/results_view_text_title"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_giant"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/questionary_results_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_trophy"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/questionary_results_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/results_view_button_text"
        android:layout_marginBottom="@dimen/margin_giant"
        android:layout_marginHorizontal="@dimen/margin_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>